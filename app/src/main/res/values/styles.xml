<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/Button</item>
    </style>



    <style name="AppTheme2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/buttonBG</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ToolBarExpanded" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="ToolBarCollapsed" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
