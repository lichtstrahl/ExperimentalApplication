<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.AnimationActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationLove"
        android:layout_width="@dimen/anim_size"
        android:layout_height="@dimen/anim_size"
        android:layout_alignParentStart="true"
        app:lottie_rawRes="@raw/love" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationLoading"
        android:layout_width="@dimen/anim_size"
        android:layout_height="@dimen/anim_size"
        android:layout_alignParentEnd="true"
        app:lottie_rawRes="@raw/loading" />

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/animationLove"
        android:text="@string/play" />

    <Button
        android:id="@+id/buttonScale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonPlay"
        android:layout_centerHorizontal="true"
        android:text="@string/click_me"/>

    <Button
        android:id="@+id/buttonMove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonScale"
        android:layout_centerHorizontal="true"
        android:text="@string/move"/>

</RelativeLayout>